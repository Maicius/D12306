<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="team.neu.ticket.mapper.UserMapper">
    <sql id="user_all_column">
          user_idcard_num, user_name, phone_num, password, job
    </sql>
<select id="doUserLogin" parameterType="User" resultType="User">

    SELECT
    <include refid="user_all_column"></include>
    FROM t_12306user
    <where>
        <if test="phone_num != null and phone_num !=''">
                and email = #{email}
        </if>
        <if test="password !=null and password !=''">
            and password = #{password}
        </if>
    </where>
</select>
</mapper>